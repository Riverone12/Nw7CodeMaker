<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_radius"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/listItemMargin"
    android:layout_marginStart="@dimen/listItemMargin"
    android:layout_marginLeft="@dimen/listItemMargin"
    android:layout_marginEnd="@dimen/listItemMargin"
    android:layout_marginRight="@dimen/listItemMargin"
    android:padding="@dimen/listItemPadding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewJan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewNumber"
        android:textSize="@dimen/textSizeMiddle"
        android:gravity="center"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>